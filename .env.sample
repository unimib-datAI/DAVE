
# Sample .env file for DAVE docker-compose.yml
# UI Configuration
ACCESS_USERNAME=admin
ACCESS_PASSWORD=password
API_BASE_URI=http://documents:3001/api
API_USERNAME=admin
API_PASSWORD=password
NEXTAUTH_SECRET=your_nextauth_secret_change_this_to_random_string
NEXTAUTH_URL=http://127.0.0.1:3000/dave/api/auth
NEXT_PUBLIC_BASE_PATH=/dave
NEXT_PUBLIC_FULL_PATH=http://127.0.0.1:3000/dave
API_LLM=http://text-generation:7862
API_INDEXER=http://qavectorizer:7863
VARIANT=default
LISTEN_UI=3000
ELASTIC_INDEX=dave

# Keycloak Configuration (optional)
USE_KEYCLOAK=false
KEYCLOAK_ID=dave_client
KEYCLOAK_SECRET=your_keycloak_secret
KEYCLOAK_ISSUER=http://keycloak:8080/realms/DAVE
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_PORT=8080
KEYCLOAK_DB_PASSWORD=keycloak

# General
RESTART_POLICY=unless-stopped

# MongoDB Configuration
MONGO_ROOT_PASSWORD=mongo_root_password
MONGO_PASSWORD=mongo_password
MONGO=mongodb://root:mongo_root_password@mongo:27017/dave?authSource=admin

# Documents Service
DOCS_PORT=3001
ENABLE_AUTH=true

# Text Generation Service
TEXT_GENERATION=http://text-generation:8000
TEXT_GENERATION_ADDR=http://text-generation:8000
TEXT_GENERATION_KEY=your-key
MODEL_NAME=phi4-mini
TEXT_GENERATION_GPU_LAYERS=35
HOST=0.0.0.0

# QA Vectorizer Service
HOST_BASE_URL=http://0.0.0.0
INDEXER_SERVER_PORT=7863
QAVECTORIZER_ADDR=7863
API_INDEXER=http://qavectorizer:7863
CHROMA_PORT=8000
SENTENCE_TRANSFORMER_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
SENTENCE_TRANSFORMER_DEVICE=cuda
OGG2NAME_INDEX=ogg2name
QAVECTORIZER_ADDR=7863

# Annotation Services (optional - set if you have these services)
ANONYMIZATION_ENDPOINT=
ANNOTATION_SPACYNER_URL=
ANNOTATION_BLINK_URL=
ANNOTATION_INDEXER_URL=
ANNOTATION_NILPREDICTION_URL=
ANNOTATION_NILCLUSTER_URL=
ANNOTATION_CONSOLIDATION_URL=
