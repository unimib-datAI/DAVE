# Sample .env file for DAVE docker-compose.yml
# Copy this file to .env and update the values as needed:
# cp .env.sample .env

# ============================================
# UI Configuration
# ============================================
ACCESS_USERNAME=admin
ACCESS_PASSWORD=password
API_BASE_URI=http://documents:3001/api
API_USERNAME=
API_PASSWORD=

# NextAuth Configuration (REQUIRED)
# Generate a random secret with: openssl rand -base64 32
NEXTAUTH_SECRET=change_this_to_random_secret_minimum_32_characters
NEXTAUTH_URL=http://127.0.0.1:3000/dave/api/auth

# UI Paths
NEXT_PUBLIC_BASE_PATH=/dave
NEXT_PUBLIC_FULL_PATH=http://127.0.0.1:3000/dave

# Service URLs
API_LLM=http://text-generation:7862
API_INDEXER=http://qavectorizer:7863
VARIANT=default
HOST=host.docker.internal
LISTEN_UI=3000

# Index Name (use quotes if name contains special characters)
ELASTIC_INDEX=dave

# ============================================
# Keycloak Configuration (Optional)
# ============================================
KEYCLOAK_ID=dave_client
KEYCLOAK_SECRET=change_this_keycloak_secret
KEYCLOAK_ISSUER=http://keycloak:8080/realms/DAVE

# ============================================
# General Configuration
# ============================================
RESTART_POLICY=unless-stopped

# ============================================
# MongoDB Configuration
# IMPORTANT: Change the default passwords below!
# ============================================
MONGO_ROOT_PASSWORD=change_this_mongo_root_password
MONGO_PASSWORD=change_this_mongo_password
# Note: Update the password in the connection string below to match MONGO_ROOT_PASSWORD
MONGO=mongodb://root:change_this_mongo_root_password@mongo:27017/dave?authSource=admin

# ============================================
# Documents Service
# ============================================
DOCS_PORT=3001
ENABLE_AUTH=false

# ============================================
# Text Generation Service
# Note: Use host.docker.internal if running text-generation outside Docker
# ============================================
TEXT_GENERATION=http://text-generation:7862
TEXT_GENERATION_ADDR=http://text-generation:7862
TEXT_GENERATION_GPU_LAYERS=35

# ============================================
# QA Vectorizer Service
# ============================================
HOST_BASE_URL=http://0.0.0.0
INDEXER_SERVER_PORT=7863
CHROMA_PORT=8000
ELASTIC_PORT=9200
SENTENCE_TRANSFORMER_EMBEDDING_MODEL=Alibaba-NLP/gte-multilingual-base
SENTENCE_TRANSFORMER_DEVICE=cuda
OGG2NAME_INDEX=ogg2name
QAVECTORIZER_ADDR=7863

# ============================================
# Annotation Services (Optional)
# Leave empty if not using these services
# ============================================
ANONYMIZATION_ENDPOINT=
ANNOTATION_SPACYNER_URL=
ANNOTATION_BLINK_URL=
ANNOTATION_INDEXER_URL=
ANNOTATION_NILPREDICTION_URL=
ANNOTATION_NILCLUSTER_URL=
ANNOTATION_CONSOLIDATION_URL=
